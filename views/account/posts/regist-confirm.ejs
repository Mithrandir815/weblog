<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>会員メニュー</title>
    <!-- Bootstrap core CSS -->


    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <!-- Custom styles for this template -->
    <%- include("../../_share/stylesheets.ejs") %>
  </head>
  <body>
    <%- include("../../_share/navbar.ejs") %>

    <main role="main" class="container">

      <div class="border-bottom mt-5 mb-5">
        <h1>新規記事登録</h1>
      </div>
      <form>
        <div class="form-group row">
          <label for="url" class="col-sm2 col-form-label">URL:</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="url" name="url" value="<%= original.url%>" />
          </div>
        </div>
        <div class="form-group row">
          <label for="title" class="col-sm2 col-form-label">タイトル:</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="title" name="title" value="<%= original.title%>" />
          </div>
        </div>
        <div class="form-group row">
          <label for="content" class="col-sm2 col-form-label">本文</label>
          <div class="col-sm-10">
            <textarea type="text" readonly class="form-control-plaintext" id="content" name="content" rows="6"><%= original.content %></textarea>
          </div>
        </div>
        <div class="form-group row">
          <label for="keywords" class="col-sm2 col-form-label">キーワード:</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="keywords" name="keywords" value="<%= original.keywords %>"/>
          </div>
        </div>
        <div class="form-group row">
          <label for="authors" class="col-sm2 col-form-label">著者:</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="authors" name="authors" value="<%= original.authors %>" />
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-1">
            <input type="submit" class="btn btn-primary" data-method="post" data-action="/account/posts/regist/execute" value="登録" />
          </div>
          <div class="col-sm-1">
            <input type="submit" class="btn btn-primary" data-method="post" data-action="/account/posts/regist/input" value="戻る" />
          </div>
        </div>
      </form>
    </main>
    <!-- /.container -->
    <%- include("../../_share/javascripts.ejs") %>
    <script src="/public/javascripts/account/posts/regist.js"></script>
  </body>
</html>
